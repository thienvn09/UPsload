@model DoAn.Models.Momo.Momoinfo

@{
    ViewData["Title"] = "Thông tin Đơn hàng";
}
<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Cart</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Cart</li>
    </ol>
</div>
<div class="container py-5">
    <h2 class="text-center">Chi tiết thanh toán</h2>
    <table class="table table-bordered mt-4">
        <tbody>
            <tr>
                <th scope="row">Tên</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th scope="row">Mã đơn hàng</th>
                <td>@Model.OrderId</td>
            </tr>
            <tr>
                <th scope="row">Thông tin đơn hàng</th>
                <td>@Model.OrderInfo</td>
            </tr>
            <tr>
                <th scope="row">Số tiền</th>
                <td>@Model.Amount.ToString("N0") VND</td>
            </tr>
            <tr>
                <th scope="row">Thời gian</th>
                <td>@Model.datetime.ToString("dd/MM/yyyy HH:mm:ss")</td>
            </tr>
        </tbody>
    </table>
    <div class="text-center">
        <a href="/" class="btn btn-primary">Quay lại trang chủ</a>
    </div>
</div>
