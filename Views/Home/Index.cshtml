@{
    ViewData["Title"] = "Home Page";
}
<!-- Fruits Shop End-->
<!-- Single Page Header End -->
<!-- Hero Start -->
<div class="container-fluid py-5 mb-5 hero-header" style="background: linear-gradient(to bottom, #f0f8ff, #e0f7fa);">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <!-- Left Content -->
            <div class="col-md-12 col-lg-7 text-center text-lg-start">
                <h4 class="mb-3 text-success fw-bold">100% Organic Foods</h4>
                <h1 class="mb-4 display-4 fw-bold text-primary">
                    Fresh & Healthy <br /> Veggies & Fruits
                </h1>
                <p class="mb-5 text-muted">
                    Enjoy the finest organic products grown with love and care. Perfect for a healthier lifestyle!
                </p>
                <div class="position-relative mx-auto" style="max-width: 500px;">
                    <input class="form-control border-2 border-secondary w-100 py-3 px-4 rounded-pill shadow-sm"
                           type="text"
                           placeholder="Search for organic products..." />
                    <button type="submit"
                            class="btn btn-success border-2 py-3 px-4 position-absolute rounded-pill text-white shadow-sm"
                            style="top: 0; right: 0; transform: translate(50%, 0);">
                        Search
                    </button>
                </div>
            </div>

            <!-- Right Carousel -->
            <div class="col-md-12 col-lg-5">
                <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner shadow-lg rounded overflow-hidden">
                        <div class="carousel-item active">
                            <img src="~/Images/SanPham/Tao-fuji.jpg"
                                 class="img-fluid w-100 rounded-3"
                                 alt="First slide" />
                            <div class="carousel-caption d-none d-md-block text-center">
                                <h5 class="bg-dark text-white px-4 py-2 rounded-pill shadow">Fresh Apples</h5>
                                <p class="text-white opacity-75 fs-5">Crisp, juicy, and delicious!</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/SanPham/xoai-cat-hoa-loc.jpg"
                                 class="img-fluid w-100 rounded-3"
                                 alt="Second slide" />
                            <div class="carousel-caption d-none d-md-block text-center">
                                <h5 class="bg-dark text-white px-4 py-2 rounded-pill shadow">Delicious Mangoes</h5>
                                <p class="text-white opacity-75 fs-5">Fresh and sweet, straight from the farm!</p>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
                        <span class="carousel-control-next-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

            </div>
        </div>
    </div>
<!-- Hero End -->
<!-- Features Section Start -->
